<div class="col-md-12 col-sm-12 col-xs-12">
  <br>
  <% if flash[:error] %>
    <div class="alert alert-danger alert-dismissible fade in">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <strong>Attention !</strong> <%= flash[:error] %>
    </div>
  <% end %>
  <% if notice %>
    <div class="alert alert-info alert-dismissible fade in">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <%= notice %>
    </div>
  <% end %>
</div>

<div class="col-md-6 col-sm-6 col-xs-12">
  <%= link_to 'Transfere de fond', new_bank_path , class: 'form-control btn btn-success'%>
</div>
<div class="col-md-6 col-sm-6 col-xs-12">
  <%= link_to 'Transfere des activations', "/banks/25/send_activation", class: 'form-control btn btn-primary' %>
</div>



<div class="col-md-12 col-sm-12 col-xs-12">
  <div class="x_panel">
    <div class="x_title">
      <h2>Mes points transferés </h2>


      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
        <thead>
        <tr>
          <th>Date</th>
          <th>Points</th>
        </tr>
        </thead>

        <tbody>
        <% @banks.each do |bank| %>
          <tr>
            <td><%= bank.date.strftime("%d-%m-%Y") %></td>
            <td><%= bank.points %></td>

          </tr>
        <% end %>
        </tbody>
      </table>


    </div>
  </div>
</div>

<div class="col-md-12 col-sm-12 col-xs-12">
  <div class="x_panel">
    <div class="x_title">
      <h2>Mes activations transferées </h2>


      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
        <thead>
        <tr>
          <th>Date</th>
          <th>Nombre d'activation</th>
          <th>Pour</th>
        </tr>
        </thead>

        <tbody>
        <% @banks2.each do |bank| %>
          <tr>
            <td><%= bank.date.strftime("%d-%m-%Y") %></td>
            <td><%= bank.activation %></td>
            <td><%= User.find_by_randomID(bank.receiver_id).last_name %> <%= User.find_by_randomID(bank.receiver_id).first_name %></td>

          </tr>
        <% end %>
        </tbody>
      </table>


    </div>
  </div>
</div>