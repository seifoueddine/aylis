

<% products.in_groups_of(3) do |group| %>

  <div class="row">
    <% group.each do |product| %>
      <div class="col-md-4">
        <%if product%>
        <div class="product-item">
          <div class="pi-img-wrapper">
            <img src="<%=product.img.url if product%>" class="img-responsive" >
            <div>
              <a <%= link_to 'Show', product , class:"btn"%></a>
            </div>
          </div>
          <h3><a ><%=product.name if product%></a></h3>
          <div class="pi-price"><%=product.price if product%> DZD</div>

          <div class="sticker sticker-new"></div>
        </div>
          <%end%>
      </div>
    <%end%>
  </div>
<%end%>

