<%= link_to "Back", users_path, class: 'btn btn-warning'%>
<h1>Activé le compte du <%=@user.last_name%></h1>
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<!--  <div class="form-group">
    <%#= f.label "Activé" %>
    <%#= f.check_box :activate %>
  </div>-->


  <div class="form-group">
    <%= f.label "Listes" %>
    <%= f.select :beneath, @userlist.map {|d|[ d.last_name,d.randomID ]}, {prompt: "Choisissez ta7t chkoun "}, {class: 'form-control', required: true} %>
  </div>


  <div class="form-group">
    <%= f.label "Position" %>
    <%= f.select :side, User::SIDE.select {|d| [ d[0],d[1] ]} , { prompt: "Choisissez le placement " }, {class: 'form-control', required: true} %>
  </div>



  <div class="form-group actions">
    <%= f.submit 'Submit', :class => 'btn btn-lg btn-success btn-block' %>
  </div>
<% end %>