
<%= link_to "Back", users_path, class: 'btn btn-warning'%>

<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label (t"general.Password") %>
      <%= f.password_field :password , class: 'form-control', placeholder: 'Enter Password...', required: true %>
    </div>

    <div class="form-group">
      <%= f.label (t"general.Password_confirmation") %>
      <%= f.password_field :password_confirmation , class: 'form-control', placeholder: 'Confirm Password...', required: true %>
    </div>

    <div class="form-group actions">
      <%= f.submit 'Submit', :class => 'btn btn-lg btn-success btn-block' %>
    </div>
<% end %>