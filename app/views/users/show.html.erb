<div class="row tile_count">
  <div class="col-md-3 col-sm-5 col-xs-7 tile_stats_count">
    <span class="count_top"><i class="fa fa-user"></i> ID du partenaire </span>
    <div class="count green"><%= @user.randomID%></div>
<!--    <span class="count_bottom"><i class="green">4% </i> From last Week</span>-->
  </div>
  <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
    <span class="count_top"><i class="fa fa-group"></i> Total</span>
    <div class="count"><%=@l+@r%></div>
<!--    <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i>3% </i> From last Week</span>-->
  </div>
  <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
    <span class="count_top"><i class="fa fa-user"></i> Total a Gauche</span>
    <div class="count "><%=@l%></div>
<!--    <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i>34% </i> From last Week</span>-->
  </div>
  <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
    <span class="count_top"><i class="fa fa-user"></i> Total a droite</span>
    <div class="count"><%=@r%></div>
<!--    <span class="count_bottom"><i class="red"><i class="fa fa-sort-desc"></i>12% </i> From last Week</span>-->
  </div>
  <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
    <span class="count_top"><i class="fa fa-user"></i> E-Bank</span>
    <div class="count"><%=number_with_delimiter(@user.points, delimiter: '  ')%></div>
<!--    <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i>34% </i> From last Week</span>-->
  </div>

</div>


